    <script>
        function showDetails(id) {
            var details = document.querySelectorAll('.details');
            details.forEach(function(detail) {
                if (detail.id === id) {
                    detail.style.display = detail.style.display === 'block' ? 'none' : 'block';
                } else {
                    detail.style.display = 'none';
                }
            });
        }
    </script>
